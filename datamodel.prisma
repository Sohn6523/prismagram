type User {
  id:ID! @id
  name: String! @unique
  email: String! @unique
  firstName: String @default(value: "")
  lastName: String
  bio: String
  following: [User!]! @relation(name: "FollowRelation")
  followers: [User!]! @relation(name: "FollowRelation")
  posts: [Post!]!
  likes: [Like!]!
  comments: [Comment!]!
  room: [Room!]!
  loginSecret: String
}

type Post {
  id: Int! @id 
  location: String
  caption: String
  user: User!
  files: [File!]!
  likes: [Like!]!
  comments: [Comment!]!
}

type Like {
  id: Int! @id 
  user: User 
  post: Post
}

type Comment {
  id: Int! @id 
  text: String
  user: User
  post: Post
}

type File {
  id: Int! @id 
  url: String!
  post: Post!
}

type Room {
  id: Int! @id
  participants: [User!]!
  message: [Message!]!
}

type Message{
  id: Int! @id
  text: String
  from: User! @relation(name: "From")
  to: User! @relation(name: "To")
  room: Room!
}